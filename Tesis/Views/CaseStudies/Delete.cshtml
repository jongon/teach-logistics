@model Tesis.Models.CaseStudy

@{
	ViewBag.Title = "Delete";
}

<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-sm-4">
		<h2>Eliminar</h2>
		<ol class="breadcrumb">
			<li>
				@Html.ActionLink("Índice", "Index")
			</li>
			<li class="active">
				<strong>Eliminar</strong>
			</li>
		</ol>
	</div>
	<div class="col-sm-8">
		<div class="title-action">
			@Html.ActionLink("Volver al índice", "Index", null, new { @class = "btn btn-primary" })
		</div>
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5>Caso de Estudio</h5>
				</div>
				<div class="ibox-content">
					<h4 class="text-danger">¿Seguro que desea eliminar el caso de estudio?</h4>
					<dl class="dl-horizontal">
						<dt>
							@Html.DisplayNameFor(model => model.Sections)
						</dt>
						<dd>
						@if (Model.Sections.Count() > 0)
						{
							foreach (var item in Model.Sections)
							{
								<span><strong>Semestre:</strong> @item.Semester.Description - </span>
								<span><strong>Sección:</strong> @item.Number</span>
								<hr>
							}
						}
						else
						{
							<span>No hay secciones asociadas a este caso de estudio</span>
						}
						</dd>
						<dt>
							@Html.DisplayNameFor(model => model.Name)
						</dt>
						<dd>
							@Html.DisplayFor(model => model.Name)
						</dd>
						<dt>
							@Html.DisplayNameFor(model => model.Created)
						</dt>
						<dd>
							@Html.DisplayFor(model => model.Created)
						</dd>
						<dt>
							@Html.DisplayNameFor(model => model.PreparationTime)
						</dt>
						<dd>
							@Html.DisplayFor(model => model.PreparationTime)
						</dd>
						<dt>
							@Html.DisplayNameFor(model => model.AcceleratedPreparationTime)
						</dt>
						<dd>
							@Html.DisplayFor(model => model.AcceleratedPreparationTime)
						</dd>
						<dt>
							@Html.DisplayNameFor(model => model.FillTime)
						</dt>
						<dd>
							@Html.DisplayFor(model => model.FillTime)
						</dd>
						<dt>
							@Html.DisplayNameFor(model => model.ExistingFillTime)
						</dt>
						<dd>
							@Html.DisplayFor(model => model.ExistingFillTime)
						</dd>
						<dt>
							@Html.DisplayNameFor(model => model.DeliveryTime)
						</dt>
						<dd>
							@Html.DisplayFor(model => model.DeliveryTime)
						</dd>
						<dt>
							@Html.DisplayNameFor(model => model.CourierDeliveryTime)
						</dt>
						<dd>
							@Html.DisplayFor(model => model.CourierDeliveryTime)
						</dd>
						<dt>
							@Html.DisplayNameFor(model => model.PurchaseOrderRecharge)
						</dt>
						<dd>
							@Html.DisplayFor(model => model.PurchaseOrderRecharge)
						</dd>
						<dt>
							@Html.DisplayNameFor(model => model.CourierCharges)
						</dt>
						<dd>
							@Html.DisplayFor(model => model.CourierCharges)
						</dd>
						<dt>
							@Html.DisplayNameFor(model => model.PreparationCost)
						</dt>
						<dd>
							@Html.DisplayFor(model => model.PreparationCost)
						</dd>
						<dt>
							@Html.DisplayNameFor(model => model.AnnualMaintenanceCost)
						</dt>
						<dd>
							@Html.DisplayFor(model => model.AnnualMaintenanceCost)
						</dd>
					</dl>
					@Html.Partial("_InitialCharges", Model.InitialCharges)

					@using (Html.BeginForm())
					{
						@Html.AntiForgeryToken()

						<div class="form-actions no-color">
							<input type="submit" value="Eliminar" class="btn btn-primary" />
							@Html.ActionLink("Volver al Índice", "Index", null, new { @class = "btn btn-white" })
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>
