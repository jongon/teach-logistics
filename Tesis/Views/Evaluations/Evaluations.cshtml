@model IEnumerable<Tesis.ViewModels.EvaluationStudentViewModel>
@{
	ViewBag.Title = "Índice";
}

<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-sm-4">
		<h2>Índice</h2>
		<ol class="breadcrumb">
			<li class="active">
				<strong>Evaluaciones</strong>
			</li>
		</ol>
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	@Html.Flash()
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5>Lista de Evaluaciones</h5>
				</div>
				<div class="ibox-content">
					<table id="evaluations" class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.QuizName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.QuestionNumbers)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.TotalScore)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.GotScore)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.TakenDate)
								</th>
								<th>
									Acción
								</th>
							</tr>
						</thead>
						<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.QuizName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.QuestionNumbers)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.TotalScore)
								</td>
								<td>
									@if (item.IsTaken)
									{									
										@Html.DisplayFor(modelItem => item.GotScore)
									}									
								</td>
								<td>
									@if (item.IsTaken)
									{
										@Html.DisplayFor(modelItem => item.TakenDate)									
									}
								</td>
								<td>
									@if (!item.IsTaken)
									{
										@Html.ActionLink("Presentar Quiz", "TakeQuiz", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })																	
									}									
								</td>
							</tr>
						}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@Scripts.Render("~/bundles/Evaluations/evaluations")
}