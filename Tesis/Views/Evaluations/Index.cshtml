@model IEnumerable<Tesis.Models.Evaluation>
@{
	ViewBag.Title = "Índice";
}

<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-sm-4">
		<h2>Evaluaciones</h2>
		<ol class="breadcrumb">
			<li class="active">
				<strong>Índice</strong>
			</li>
		</ol>
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	@Html.Flash()
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5>Evaluaciones</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Crear Evaluación", "Create", null, new { @class = "btn btn-primary btn-xs" })
					</div>
				</div>
				<div class="ibox-content">
					<table id="evaluations" class="table table-striped">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.Name)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Created)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.LimitDate)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.MinutesDuration)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Questions)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Sections)
								</th>
								<th>
									Acción
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Name)
									</td>
									<td>
										@item.Created.ToString("dd/MM/yyyy")
									</td>
									<td>
										@item.LimitDate.ToString("dd/MM/yyyy")
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.MinutesDuration) min
									</td>
									<td>
										@item.Questions.Count()
									</td>
									<td>
										@if (item.Sections.Count() > 0)
										{
											foreach (var sectionItem in item.Sections)
											{
												<span><strong>Semestre:</strong> @sectionItem.Semester.Description -</span>
												<span><strong>Sección:</strong> @sectionItem.Number</span>
												<br>
											}
										}
										else
										{
											<span>No tiene secciones asociadas</span>
										}
									</td>
									<td>
										@Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
										@Html.ActionLink("Asignar/Designar", "AssignSection", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
										@Html.ActionLink("Calificaciones", "Califications", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
										@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
										@Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@Scripts.Render("~/bundles/Evaluations/index")
}