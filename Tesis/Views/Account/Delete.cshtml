@model Tesis.Models.User

@{
	ViewBag.Title = "Eliminar";
}

<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-sm-4">
		<h2>Usuarios</h2>
		<ol class="breadcrumb">
			<li>
				@Html.ActionLink("Índice", "Index")
			</li>
			<li class="active">
				<strong>Eliminar</strong>
			</li>
		</ol>
	</div>
	<div class="col-sm-8">
		<div class="title-action">
			@Html.ActionLink("Volver al Índice", "Index", null, new { @class = "btn btn-primary" })
		</div>
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	@Html.Flash()
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5>Eliminar Usuario</h5>
				</div>
				<div class="ibox-content">
					<h4 class="text-danger">¿Está seguro que desea eliminar este registro?</h4>
					<dl class="dl-horizontal">
						<dt>
							@Html.DisplayNameFor(model => model.Email)
						</dt>

						<dd>
							@Html.DisplayFor(model => model.Email)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.FirstName)
						</dt>

						<dd>
							@Html.DisplayFor(model => model.FirstName)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.LastName)
						</dt>

						<dd>
							@Html.DisplayNameFor(model => model.LastName)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.IdCard)
						</dt>

						<dd>
							@Html.DisplayFor(model => model.IdCard)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.Roles)
						</dt>

						<dd>
						@foreach (var role in ViewBag.Roles)
						{
							<text>@role</text>
						}
						</dd>
						@if (ViewBag.Roles.Contains("Estudiante")) {
							<dt>
								@Html.DisplayNameFor(model => model.Section.Semester)
							</dt>

							<dd>
								@Html.DisplayFor(model => model.Section.Semester.Description)
							</dd>

							<dt>
								@Html.DisplayNameFor(model => model.Section)
							</dt>

							<dd>
								@Html.DisplayFor(model => model.Section.Number)
							</dd>
						}						
					</dl>

					@using (Html.BeginForm())
					{
						@Html.AntiForgeryToken()

						<div class="form-actions no-color">
							<input type="submit" value="Eliminar" class="btn btn-primary" />
							@Html.ActionLink("Volver al Índice", "Index", null, new { @class = "btn btn-white" })
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>
