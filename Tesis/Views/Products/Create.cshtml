@model Tesis.ViewModels.ProductViewModel
@{
	ViewBag.Title = "Agregar Productos";
}

<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-sm-4">
		<h2>Agregar</h2>
		<ol class="breadcrumb">
			<li>
				@Html.ActionLink("Lista", "Index")
			</li>
			<li class="active">
				<strong>Agregar Productos</strong>
			</li>
		</ol>
	</div>
	<div class="col-sm-8">
		<div class="title-action">
			@Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-primary" })
		</div>
	</div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5>Agregar Productos</h5>
				</div>
				<div class="ibox-content">
					@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
					{
						@Html.AntiForgeryToken()
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						<div class="form-group">
							@Html.LabelFor(model => model.Number, new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.TextBoxFor(model => model.Number, new { @class = "text-box single-line" })
								@Html.ValidationMessageFor(model => model.Number)
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.EditorFor(model => model.Name)
								@Html.ValidationMessageFor(model => model.Name)
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(model => model.City, new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.EditorFor(model => model.City)
								@Html.ValidationMessageFor(model => model.City)
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(model => model.Distance, new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.TextBoxFor(model => model.Distance, new { @class = "text-box single-line" })
								@Html.ValidationMessageFor(model => model.Distance)
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-offset-2 col-md-10">
								<input value="Agregar Otro" class="btn btn-primary" type="submit">
								<input value="Agregar y Finalizar" class="btn btn-info" type="submit">
								<a class="btn btn-danger" href="/products">Cancelar</a>
							</div>
						</div>
															}
				</div>
			</div>
		</div>
	</div>
</div>