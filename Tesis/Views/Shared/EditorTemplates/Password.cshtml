@model object 
@{
	var htmlAttributesDefault = new {
		@class = "text-box single-line",
		type = "password"											 
	};
	
	var htmlAttributesAux = ViewData["htmlAttributes"] ?? new { };

	var htmlAttributes = new RouteValueDictionary(htmlAttributesDefault);
	foreach (var item in new RouteValueDictionary(htmlAttributesAux))
	{
		htmlAttributes[item.Key] = item.Value;
	}		
}
@Html.TextBoxFor(model => model, htmlAttributes)