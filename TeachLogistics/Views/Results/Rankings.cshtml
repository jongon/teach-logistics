@model IEnumerable<TeachLogistics.ViewModels.GroupRankingViewModel>
@{
	ViewBag.Title = "Rankings";
	var section = ViewBag.Section;
	var presentTrophy = false;	
}
<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-sm-4">
		<h2>Modelo de Gestión</h2>
		<ol class="breadcrumb">
			<li>
				@if (User.IsInRole("Administrador"))
				{				
					@Html.ActionLink("Índice", "Index", "Simulations")
				}
			</li>
			<li class="active">
				<strong>Rankings</strong>
			</li>
		</ol>
	</div>
	<div class="col-sm-8">
		<div class="title-action">
			@if (User.IsInRole("Administrador"))
			{			
				@Html.ActionLink("Volver al Índice", "Index", "Simulations", null, new { @class = "btn btn-primary" })
			}
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="wrapper wrapper-content animated fadeInRight">
			@if(User.IsInRole("Administrador"))
			{			
			<div class="ibox-content m-b-sm border-bottom">
				<div class="p-xs">
					<div class="pull-left m-r-md">
						<i class="fa fa-globe text-navy mid-icon"></i>
					</div>
					<h2>Rankings - Seccion: @(section)</h2>
				</div>
			</div>
			}
			<div class="ibox-content forum-container">
				<table class="forum-item table">
					<thead>
						<tr>
							<td>
								<h3>Grupos</h3>
							</td>
							<td>
								<h3>Costo Total</h3>
							</td>
						</tr>
					</thead>
					<tbody>
						@{ var i = 1; }
						@foreach (var group in Model)
						{
							<tr>
								<td>
									@if (presentTrophy)
									{									
									<div class="forum-icon">
										<i class="fa fa-shield"></i>
									</div>
									}									
									<a href="#" class="forum-item-title">@(i++ )- @group.GroupName</a>
								</td>
								<td>
									<span class="views-number">
										@group.Score
									</span>
								</td>
							</tr>					
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
