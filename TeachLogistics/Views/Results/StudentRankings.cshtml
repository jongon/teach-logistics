@model IEnumerable<TeachLogistics.ViewModels.GroupRankingViewModel>
@{
	ViewBag.Title = "Rankings";
	Layout = null;	
	var section = ViewBag.Section;
	var presentTrophy = false;
}
<div class="row">
	<div class="col-lg-12">
		<div class="wrapper wrapper-content animated fadeInRight">
			<div class="ibox-content m-b-sm border-bottom">
				<div class="p-xs">
					<div class="pull-left m-r-md">
						<i class="fa fa-globe text-navy mid-icon"></i>
					</div>
					<h2>Rankings - Seccion: @(section)</h2>
				</div>
			</div>
			<div class="ibox-content forum-container">
				<table class="forum-item table">
					<thead>
						<tr>
							<td>
								<h3>Grupos</h3>
							</td>
							<td>
								<h3>Costo Total</h3>
							</td>
						</tr>
					</thead>
					<tbody>
						@{ var i = 1; }
						@foreach (var group in Model)
						{
							<tr>
								<td>
									@if (presentTrophy)
									{
										<div class="forum-icon">
											<i class="fa fa-shield"></i>
										</div>
									}
									<a href="#" class="forum-item-title">@(i++) - @group.GroupName</a>
								</td>
								<td>
									<span class="views-number">
										@group.Score
									</span>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
