@model IEnumerable<TeachLogistics.ViewModels.GroupStadistics>

@{
	ViewBag.Title = "Grupos";
}

<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-sm-4">
		<h2>Estadísticas</h2>
		<ol class="breadcrumb">
			<li>
				@if (User.IsInRole("Estudiante"))
				{
					@Html.ActionLink("Índice", "StudentStadistics")				
				}
			</li>
			<li class="active">
				<strong>Grupos</strong>
			</li>
		</ol>
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	@Html.Flash()
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5>Grupos</h5>
				</div>
				<div class="ibox-content">

					<table id="groups" class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.GroupName)
								</th>
								<th>
									@Html.DisplayName("Acción")
								</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.GroupName)
								</th>
								<th>
									@Html.DisplayName("Acción")
								</th>
							</tr>
						</tfoot>
						<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.GroupName)
								</td>
								<td>
									@Html.ActionLink("Ver Estadísticas", "GroupStadistics", new { GroupId = item.GroupId }, new { @class = "btn btn-success btn-sm" })
								</td>
							</tr>
						}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@Scripts.Render("~/bundles/Stadistics/groups")
}
