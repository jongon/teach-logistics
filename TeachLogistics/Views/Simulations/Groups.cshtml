@using TeachLogistics.Models
@model IEnumerable<TeachLogistics.Models.Group>
@{
	ViewBag.Title = "Grupos";
	Section section = ViewBag.Section;	
}

<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-sm-4">
		<h2>Modelos de Gestión</h2>
		<ol class="breadcrumb">
			<li>
				@Html.ActionLink("Índice", "Index")
			</li>
			<li class="active">
				<strong>Grupos en simulación</strong>
			</li>
		</ol>
	</div>
</div>
<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-md-12">
		<label>Caso de Estudio: </label>
		<span>@(section.CaseStudy.Name)</span>
	</div>
	<div class="col-md-12">
		<label>Semestre: </label>
		<span>@(section.Semester.Description)</span>
	</div>
	<div class="col-md-12">
		<label>Section: </label>
		<span>@(section.Number)</span>
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	@Html.Flash()
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5>Grupos</h5>
				</div>
				<div class="ibox-content">
					<table id ="groups" class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.Name)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Position)
								</th>
								<th>
									@Html.DisplayName("Acción")
								</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.Name)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Position)
								</th>
								<th>
									@Html.DisplayName("Acción")
								</th>
							</tr>
						</tfoot>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Name)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Position)
									</td>
									<td>
										<button type="button" class="btn btn-success btn-sm" data-container="body" data-toggle="popover" data-placement="top"
											data-content="
											@foreach (var user in item.Users) { 
												<text> @user.FirstName @user.LastName - (@user.UserName) </text>
												@:&#013;											 										
											}">
											Integrantes
										</button>
										@Html.ActionLink("Detalle", "GroupDetail", new { Id = item.Id }, new { @class = "btn btn-sm btn-primary" })
									</td>
								</tr>
						}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts{
	@Scripts.Render("~/bundles/Simulations/groups")
}