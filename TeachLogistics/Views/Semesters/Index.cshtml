@model IEnumerable<TeachLogistics.ViewModels.SemesterViewModel>

@{
	ViewBag.Title = "Índice";
}

<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-sm-4">
		<h2>Semestres</h2>
		<ol class="breadcrumb">
			<li class="active">
				<strong>Índice</strong>
			</li>
		</ol>
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	@Html.Flash()
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5>Semestres</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Crear semestre", "Create", null, new { @class = "btn btn-primary btn-xs" })
					</div>
				</div>
				<div class="ibox-content">

					<table id="semesters" class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>
									@Html.DisplayName("Nombre de semestre")
								</th>
								<th>@Html.DisplayName("Acción")</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>
									@Html.DisplayName("Nombre de semestre")
								</th>
								<th>@Html.DisplayName("Acción")</th>
							</tr>
						</tfoot>
						<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.Description)
								</td>
								<td>
									@Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
									@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
									@Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
								</td>
							</tr>
						}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@Scripts.Render("~/bundles/Semesters/index")
}
